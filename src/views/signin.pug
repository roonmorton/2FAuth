                                            .message-body
                                                p Registrate...  
                                        hr
                                        article.message.is-info
                                            .message-body
                                                a.button.is-text(href="/login") 
                                                    span.icon
                                                        i.fas.fa-user-lock
                                                    span Iniciar sesión                   
        block scripts
            script(src='/public/js/jquery.js')
            script(src='/public/js/all.js')
            script(src='/public/js/script.js')
            