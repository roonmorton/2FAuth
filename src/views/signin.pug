        link(rel='stylesheet', href='/public/css/bulma.min.css')
    body
        nav.navbar.has-shadow.is-primary(role="navigation", aria-label="main navigation")
            .container
                .navbar-brand
                    a.navbar-item
                        figure.image.is-48x48
                            img(src="/public/img/logo3.png", style="max-height: 100% !important;", width="80", height="20")
        .hero
            .hero-body
                .container
                    .columns.is-centered.is-container
                        .column.is-7.is-half.is-paddingless
                            .box.is-paddingless
                                nav.level.has-background-light.has-shadow(style="padding:0.5em 0 0.5em 0;")
                                    .level-item.has-text-centered(style="")
                                        h1.title Registrarse
                                        //figure.image.is-48x48
                                            //img(src="/public/img/logo3.png", width="35", height="35")
                                //.content(style="text-align: center;")
                                    //h2.subtitle.has-text-centered(style="display:inline-block; border-bottom: 3px #363636 solid; margin-bottom: 0;") Iniciar
                                .content(style="padding-left: 1.5em; padding-right: 1.5em; padding-bottom: 1.5em;")
                                    form(method="POST")
                                        .field.is-horizontal
                                            .field-label.is-normal
                                                label.label(for="") Nombres:
                                            .field-body
                                                .field
                                                    p.control
                                                        input.input(required="required",type="text", name="name", placeholder="Nombres", autofocus="autofocus" , value=obj.name ? obj.name : '')
                                                .field
                                                    p.control
                                                        input.input(type="text", name="lastname", value=obj.lastname ? obj.lastname : '', placeholder="Apellidos")
                                        
                                        .field.is-horizontal
                                            .field-label.is-normal
                                                label.label(for="email") Email:
                                            .field-body
                                                .field
                                                    .control
                                                        input.input(required="required", type="text", name="email", value=obj.email ? obj.email : '', placeholder="email@gmail.com")

                                        .field.is-horizontal
                                            .field-label.is-normal
                                                label.label(for="birthday") Cumpleaños:
                                            .field-body
                                                .field
                                                    p.control
                                                        input.input(type="date", name="birthday", value=obj.birthday ? obj.birthday : '', placeholder="Fecha nacimiento")
                                                .field
                                                    p.control.has-icons-left
                                                        input.input(type="tel", name="phone", value=obj.phone ? obj.phone : '', placeholder="53012959")
                                                        span.icon.is-smaill.is-left
                                                            i.fas.fa-phone
                                        //.field.is-horizontal
                                            .field-label.is-normal
                                                label.label(for="p_username") Usuario:
                                            .field-body
                                                .field
                                                    .control
                                                        input.input(required="required", type="text", name="p_username", value=obj.p_username ? obj.p_username : '', placeholder="Nombre de usuario")
                                        .field.is-horizontal
                                            .field-label.is-normal
                                                label.label(for="p_password") Contraseña:
                                            .field-body
                                                .field
                                                    .control
                                                        input.input(required="required", type="password", name="p_password", placeholder="********")


                                        br
                                        .columns.is-centered.is-mobile
                                            .column.is-6.is-half.is-paddingless
                                                button.button.is-fullwidth.is-danger.is-rounded
                                                        span.icon
                                                            i.fas.fa-save
                                                        span Crear
                                        if errors.length > 0
                                            article.message.is-danger
                                                .message-body(style="padding-top: .5em; padding-bottom: .5em")
                                                    ul(style="margin-top: 0")
                                                        each err in errors 
                                                            li= err
